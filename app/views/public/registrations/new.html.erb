<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>



  <div class="field">
    <%= f.label :名前%><br />
    <%= f.label :（姓） %><%= f.text_field :first_name %><%= f.label :（名）%><%= f.text_field :last_name %>
  </div>
    
  <div class="field">
      <%= f.label :フリガナ%><br />
      <%= f.label :（セイ） %><%= f.text_field :first_name_kana %><%= f.label :（メイ）%><%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス%><br />
    <%= f.email_field :email %>
  </div>
  
  <div class="field">
    <%= f.label :郵便番号（ハイフンなし）%><br />
    <%= f.text_field :zip_code %>
  </div>
  
  <div class="field">
    <%= f.label :住所%><br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし）%><br />
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<p>すでに登録済みの方は
<%= render "public/shared/links" %>
からログインしてください</p>