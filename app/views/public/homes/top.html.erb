<div class="container">
  <div class="example">
    <% @items.first(1). each do |item| %>
    <tr>
        <td>
          <!--アイテム画像を表示-->
          <%= attachment_image_tag item, :image, :fill, 800, 400 %>
              <p>ようこそ、ながのCAKEへ！<br>
              このサイトは、ケーキ販売のECサイトになります。<br>
              会員でないかたも商品の閲覧はできますが、<br>
              購入には会員登録が必要になります。</p>
        </td>
    </tr>
    <% end %>
  </div>
  <div class="col-md-8 offset-md-1">
    <!--ランダムでアイテム４件表示-->
    <h2>新着商品</h2>
        <table class="table table-bordered">
          <tbody>
            <!--新着を5件表示-->
            <% @items.first(5). each do |item| %>
            
              <td>
                <!--アイテム画像表示-->
                <%= link_to item_path(item.id) do %>
                  <!--アイテム画像を表示-->
                  <%= attachment_image_tag item, :image, :fill, 150, 150 %>
                <% end %>
                  <!--商品名と税抜き価格のリンク表示-->
                <p><%= link_to item.name, item_path(item.id) %></p>
                <p><%= link_to item_path(item.id) do %>
                   ¥<%= (item.price_no_tax * 1.1).floor %> 円</p>
                   <% end %>
              </td>
            <% end %>
          </tbody>
      </table>
  </div>
  <div>
    <div class="mb-4" align=right>
    <!--アイテム一覧画面に飛ぶ-->
   <%= link_to "全ての商品を見る", items_path %>
  </div>
</div>

