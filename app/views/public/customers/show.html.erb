
<div class="container">
    <div class="col-6 mx-auto">
        <h1>登録情報</h1><%= link_to "編集する", customers_edit_path, class:'btn btn-block btn-outline-secondary' %>
    </div>
    <div class="col-6 mx-auto">
        <h2>氏名</h2>
    </div>
    <div class="col-6 mx-auto">
        <%= current_customer.first_name %><%= current_customer.last_name %>
    </div>
    <div class="col-6 mx-auto">
        <h2>カナ</h2>
    </div>
    <div class="col-6 mx-auto">
        <%= current_customer.first_name_kana %><%= current_customer.last_name_kana %>
    </div>
    <div class="col-6 mx-auto">
        <h2>郵便番号</h2>
    </div>
    <div class="col-6 mx-auto">
        <%= current_customer.zip_code %>
    </div>
    <div class="col-6 mx-auto">
        <h2>住所</h2>
    </div>
    <div class="col-6 mx-auto">
        <%= current_customer.address %>
    </div>
    <div class="col-6 mx-auto">
        <h2>電話番号</h2>
    </div>
    <div class="col-6 mx-auto">
        <%= current_customer.telephone_number %>
    </div>
    <div class="col-6 mx-auto">
        <h2>メールアドレス</h2>
    </div>
    <div class="col-6 mx-auto">
        <%= current_customer.email %>
    </div>
    <div class="col-6 mx-auto">
        <h1>配送先</h1>
    </div>
    <div class="col-6 mx-auto">
        <%= link_to "一覧を見る",  addresses_path, class:'btn btn-block btn-outline-secondary' %>
    </div>
    <div class="col-6 mx-auto">
        <h1>注文履歴</h1>
    </div>
    <div class="col-6 mx-auto">
        <%= link_to "一覧を見る",  orders_path, class:'btn btn-block btn-outline-secondary' %>
    </div>

</div>