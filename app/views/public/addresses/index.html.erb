<div class="container">
  
  <h1>配送先登録/一覧</h1>
  <table>
      
    <%= form_with model: @shipping_address, url: addresses_path, local: true do |f| %>
      <th>
        <%= f.label :郵便番号 %>
      </th>
      <th>
        <%= f.text_field :zip_code %>
      </th>
      <th>
        <%= f.label :住所 %>
      </th>
      <th>
        <%= f.text_field :address %>
      </th>
         
      <th>
        <%= f.label :宛名 %>
      </th>
      <th>
        <%= f.text_field :recipients_name %>
      </th>
      <th> 
        <%= f.submit "新規登録", class: "btn btn-outline-primary  btn-lg" %>
      </th>
    <% end %>
    
    <%  @shipping_addresses.each do |shipping_address| %>
      <tr>
        
        <td>
        </td>
          
        <td>
          <%= shipping_address.zip_code %>
        </td>
          
        <td>
        </td>
          
        <td>
          <%= shipping_address.address %>
        </td>
          
        <td>
        </td>
          
        <td>
          <%= shipping_address.recipients_name %>
        </td>
        
        <td>
          <%= link_to "編集", edit_address_path(shipping_address.id), class: "btn btn-outline-primary" %>
          <%= link_to "削除", address_path(shipping_address.id) , method: :delete, class: "btn btn-outline-primary" %>
        </td>
      </tr>
    <% end %>
  </table>
</div>