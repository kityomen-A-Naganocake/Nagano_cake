<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!--注文情報入力画面を表示-->
      <h2>注文情報入力</h2>
    </div>
  </div>
    <div class="col-md-8 offset-md-1">
      <div class="row">
        <!--支払い方法選択-->
        <strong>お支払い方法</strong>
      </div>
      <%= form_tag(orders_path, method: :post) do %>
        <div>
          <!--クレジットか銀行振り込みに変える-->
          <%= radio_button_tag :payment, :クレジットカード %>
          <%= label_tag :payment, "クレジットカード", {value: :"クレジットカード", style: "display: inline-block;"} %><br>
          <%= radio_button_tag :payment, :銀行振込 %>
          <%= label_tag :payment, "銀行振込", {value: :"銀行振込", style: "display: inline-block;"} %>
        </div>
        <div class="row">
          <!--お届け先選択-->
          <strong>お届け先</strong>
        </div>
        <div>
          <% address = current_customer.zip_code + current_customer.address + current_customer.last_name + current_customer.first_name %>
          <%= radio_button_tag :select, :my_address %>
          <%= label_tag :select, "ご自身の住所", {value: :my_address, style: "display: inline-block;"} %><br>
          〒<%= @customer.zip_code %>  <%= @customer.address %><br>
          <%= @customer.full_name %><br>
          <%= radio_button_tag :select, :select_address %>
          <span>&nbsp;登録済住所から選択</span><br>
          <%= select_tag :address, options_for_select(@shipping_addresses.map do |shipping|
          ["〒" + shipping.zip_code + "  " + shipping_address + "  " + shipping.id]
            end), {include_blank: '配送先を選択'} %>
        </div>
          <div class="row"><%#= f.submit '確認画面に進む' %></div>
      <% end %>
          <div class="row">
            <!--お届け先選択-->
            <strong>新しいお届け先を登録する</strong>
          </div>
            <%= form_with model:@shipping_address, local:true do |f| %>
              <div class="field">
                <%= f.label :郵便番号（ハイフンなし）%><br />
                <%= f.text_field :zip_code %>
              </div>
              
              <div class="field">
                <%= f.label :住所%><br />
                <%= f.text_field :address %>
              </div>
              <div class="field">
                <%= f.label :宛名%><br />
                <%= f.text_field :full_name %>
              </div>
            <%= f.submit "編集内容を保存" %>
          <% end %>
      </div>
    </div>
</div>