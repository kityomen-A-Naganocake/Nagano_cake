<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!--注文情報入力画面を表示-->
      <h2>注文情報入力</h2>
    </div>
  </div>
    <div class="col-md-8 offset-md-1">
      <div class="row">
        <!--支払い方法選択-->
        <strong>お支払い方法</strong>

      </div>
      <%= form_with model:@order, url:orders_confirm_path, local:true do |f| %>
        <div>
          <!--クレジットか銀行振り込みに変える-->
          <%= f.radio_button :payment_method, "credit_card" %>
          <%= f.label :payment_method, "クレジットカード" %>

          <%= f.radio_button :payment_method, "transfer" %>
          <%= f.label :payment_method, "銀行振込" %>
        </div>
        <div class="row">
          <!--お届け先選択を表示-->
          <strong>お届け先</strong>
        </div>
        <div>
          <!-- address_number と定義して1～3の番号を割り当てます -->
          <%= f.radio_button :address_number, 1 %> 
          <%= f.label :address_number_1, "ご自身の住所" %><br>
          〒<%= @customer.zip_code %>  <%= @customer.address %><br>
          <%= @customer.full_name %><br>
          <!-- 登録されたaddressから選んでもらう場合 -->
          <%= f.radio_button :address_number, 2 %>
          <span><%= f.label :address_number_2, "登録済住所から選択" %></span><br>
            <%= f.collection_select(:address_id, @addresses, :id, :full_address, ) %>
        </div>
          <div class="row">
            <!--新規にアドレスを作成する場合-->
            <%= f.radio_button :address_number, 3 %>
            <strong><%= f.label :address_number_3, "新しいお届け先" %></strong>
          </div>
          <!--新規にアドレスを作成して保存する-->
              <div class="field">
                <%= f.label :郵便番号（ハイフンなし）%><br />
                <%= f.text_field :zip_code %>
              </div>
              <div class="field">
                <%= f.label :住所%><br />
                <%= f.text_field :address %>
              </div>
              <div class="field">
                <%= f.label :宛名%><br />
                <%= f.text_field :full_name %>
              </div>
              <!--注文詳細画面に進む-->
            <%= f.submit "確認画面に進む" %>
        <% end %>
      </div>
    </div>
</div>
