<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>商品新規登録</h1>

        <%= form_with model:@admin_item, local:true do |f| %>
          <div class="form-group">
            <label for="item_image">商品画像</label>
            <%= f.attachment_field:image %>
          </div>

          <div class="form-group">
            <label for="user_name">商品名</label>
            <%= f.text_field:name, class:"form-control name" %>
          </div>

          <div class="form-group">
            <label for="item_description">商品説明</label>
            <%= f.text_area:description, class:"form-control description" %>
          </div>

          <!--ジャンル後から編集-->
          <div class="form-group">
            <label for="item_genre">ジャンル</label>
            <%= f.collection_select(:genre_id, @genres, :id, :name, {prompt:'-- 選択してください --'}, {class:"form-control genre"} ) %>
          </div>

          <div class="form-group">
            <label for="item_price_no_tax">税抜価格</label>
            <%= f.text_field:price_no_tax, class:"form-control price_no_tax" %>円
          </div>

          <div class="form-group">
            <label for="item_is_active">販売ステータス</label>
            <%= f.radio_button:is_active, 'true', class:"form-control is_active" %>販売中
            <%= f.radio_button:is_active, 'false', class:"form-control is_active" %>販売停止中
          </div>

          <div class="form-group">
            <%= f.submit '新規登録', class:"btn btn-secondary" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</main>