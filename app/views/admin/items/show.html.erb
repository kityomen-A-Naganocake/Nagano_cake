<h1>商品詳細</h1>

    <%= attachment_image_tag @item, :image %>
    
    <table>
        <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
        </tr>
        <tr>
            <td>商品説明</td>
            <td><%= @item.description %></td>
        </tr>
        <tr>
            <td>
                税込価格<br>
                （税抜価格）
            </td>
            <td></td>
        </tr>
        <tr>
           <td>販売ステータス</td>
           <td>
           <% if @item.is_active == true %>
               販売中
           <% else %>
               販売中止中
           <% end %>
           </td>
        </tr>
    </table>