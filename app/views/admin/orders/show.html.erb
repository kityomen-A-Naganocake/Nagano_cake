<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= form_with model:@order, local:true do |f| %>
       <table>
          
          <tr>
          　<td>購入者</td>
            <td><%= link_to @order.customer.full_name, admin_customer_path(@order.customer.gitid) %><td>
          </tr>
          <tr>
          　<td>注文日</td>
            <td><%= @order.created_at %></td>
          </tr>
          <tr>
          　<td>配送先</td>
          　<td>〒<%= @order.shipping_address %></td>
          　
          </tr>
          <tr>
            <td></td>
            <td><%= @order.shipping_name %></td>
          </tr>
          
          <tr>
            <td>支払い方法</td>
          　<td><%= @order.payment_method_i18n %></td>
          </tr>
          
          <tr>
              <td>注文ステータス</td>
              <td><%= f.select :status, [['入金待ち',0],['入金確認',1], ['製作中',2], ['発送準備中',3], ['発送済み',4]] %><%= f.submit '更新', class:"btn btn-success" %></td>

          </tr>
      </table>
       
      
      <% end %>
    </div>
    
  </div>
  
  <div class="row">

  <div class="col-lg-12">
      <table class="table">
  <thead>
    <tr>
      <th scope="col">商品名</th>
      <th scope="col">単価（税込）</th>
      <th scope="col">数量</th>
      <th scope="col">小計</th>
      <th scope="col">制作ステータス</th>

    </tr>
  </thead>
  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <th scope="row"><%= cart.item.name %></th>
        <td><%= cart.price %></td>
        <td><%= cart.quantity %></td>
        <td><%= cart.quantity*cart.price %></td>
        
        <%= form_with model:@cart, local:true do |f| %>
        <td><%= f.select :production_status, [['着手不可',0],['制作待ち',1], ['製作中',2], ['制作完了',3]] %><%= f.submit '更新', class:"btn btn-success" %></td>
        <% end %>
      </tr>
      
      
    <% end %>
  </tbody>
</table>
      <table>
       <tr>
         <td>商品合計</td>
         <td>¥<%= @order.payment_amount %>円</td>
       </tr>
       <tr>
         <td>送料</td>
         <td>800円</td>
       </tr>
       <tr>
         <td>請求金額合計</td>
         <td>¥<%= @order.payment_amount + 800 %>円</td>
       </tr>

     </table>
     
  
   
   
   
   
   
</div>
