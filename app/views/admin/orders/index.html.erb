<div class="container">


<table>
 <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
 </tr>
 <% @orders .each do |order| %>
 
    
    
    
    <tr>
      <td><%= link_to order.created_at, admin_order_path(order.id) %></td>
      <td><%= order.customer.full_name %></td>
      <% @sum = 0 %>
      <% order.order_details.each do |order_detail| %>
      <% @sum += order_detail.quantity %>
      <% end %>
      <td><%= @sum %></td>
      <td><%= order.status_i18n %></td>
    </tr>
 <% end %>
 </table>
 <%= paginate @orders %>
 </div>