<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if admin_signed_in? %>
      <nav class="navbar navbar-expand-lg">
        <div class="container">
          <span class="navbar-brand"><%= image_tag 'S__22970372_0.jpg', class: "image", size: "450x100" %></span>
          <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
              <li class="mx-5"><%= link_to '商品一覧', admin_items_path %></li>
              <li class="mx-5"><%= link_to '会員一覧', admin_customers_path %></li>
              <li class="mx-5"><%= link_to '注文履歴一覧', admin_orders_path %></li>
              <li class="mx-5"><%= link_to 'ジャンル一覧', admin_genres_path %></li>
              <li class="mx-5"><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %></li>
            </ul>
          </div>
        </div>
      </nav>
      <% elsif customer_signed_in?  %>
      <nav class="navbar navbar-expand-lg">
        <div class="container">
          <span class="navbar-brand"><%= link_to image_tag("S__22970372_0.jpg", class: "image", size: "450x100"), root_path %></span>
          <p>ようこそ、<%= current_customer.full_name %>さん！</p>
          <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
              <li class="mx-5"><%= link_to 'マイページ', customers_my_page_path %></li>
              <li class="mx-5"><%= link_to '商品一覧', items_path %></li>
              <li class="mx-5"><%= link_to 'カート', cart_items_path %></li>
              <li class="mx-5"><%= link_to 'ログアウト', destroy_customer_session_path, method: :delete %></li>
            </ul>
          </div>
        </div>
      </nav>
      <% else %>
      <nav class="navbar navbar-expand-lg">
        <div class="container">
          <span class="navbar-brand"><%= link_to image_tag("S__22970372_0.jpg", class: "image", size: "450x100"), root_path %></span>
          <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
              <li class="mx-5"><%= link_to 'About', about_path %></li>
              <li class="mx-5"><%= link_to '商品一覧', items_path %></li>
              <li class="mx-5"><%= link_to '新規登録', new_customer_registration_path %></li>
              <li class="mx-5"><%= link_to 'ログイン', new_customer_session_path %></li>
            </ul>
          </div>
        </div>
      </nav>
      <% end %>
    </header>

    <%= yield %>
    
    <footer>
      <div class="container mt-5  border-top border-dark mg">
        <div class="row"></div>
      </div>
    </footer>
  </body>
</html>

